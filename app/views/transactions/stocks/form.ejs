<!DOCTYPE html>
<html>

<head>
    <title>Goldbasket</title>
    <link rel="icon" href="/img/icon.png">
    <link rel="stylesheet"  type="text/css" href="/css/reset.css">
    <link rel="stylesheet" href="/css/libs/google-fonts.css">
    <link rel="stylesheet" href="/css/libs/materialize.min.css" media="screen,projection">
    <link rel="stylesheet" type="text/css" href="/css/estilo-form.css">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<body>
    <header>
        <div class="container">
            <h1 class="titulo">Adicionar nova transação</h1>
        </div>
    </header>
    <main>
        <section class="container">
            <form id="add-form" class="col s12" action="/transactions/stocks" method="post">
                <div class="erros">
                    <ul>
                        <% for(var i = 0; i < errorValidation.length; i++){ %>
                            <li>
                                <%= errorValidation[i].msg %>
                            </li>
                            <% } %>
                    </ul>
                </div>

                <label for="options">Tipo</label>
                <div class="row">
                    <div class="input-field col s4 grupo">
                        <select id="options" name="type" class="browser-default">
                            <!-- <option value="" disabled selected>Choose your option</option> -->
                            <option value="buy">Compra</option>
                            <option value="sell">Venda</option>
                        </select>
                    </div>

                    <div class="input-field col s4 grupo">
                        <label for="add-ticker" data-error="wrong" data-success="right">Código</label>
                        <input list="ticker-list" name="ticker" id="add-ticker" type="text" placeholder="digite o código desejado" class="validate">
                        <datalist id="ticker-list">
                            <% for(var i = 0; i < tickers.length; i++){ %>
                            <option value="<%= tickers[i].ticker %>"><%= tickers[i].company_name %></option>
                            <% } %>
                        </datalist>
                    </div>

                    <div class="input-field col s4 grupo">
                        <input id="add-date" name="date" type="date" class="datepicker">
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s4 grupo">
                        <input id="add-quantity" name="quantity" type="text" placeholder="digite quantidade de ações" >
                        <label for="add-quantity">Quantidade</label>
                    </div>

                    <div class="input-field col s4 grupo">
                        <input id="add-price" name="price" type="text" placeholder="digite o preco da ação" >
                        <label for="add-price">Preço</label>
                    </div>

                    <div class="input-field col s4 grupo">
                        <input id="add-brokerage" name="brokerage" type="text" placeholder="digite o valor da corretagem">
                        <label for="add-brokerage">Corretagem</label>
                    </div>
                </div>

            </form>
        </section>
        <section class="container buttons">
            <a id="add-stock" class="btn-floating btn-large waves-effect waves-light green botao bto-principal"><i class="material-icons">add</i></a>

            <a href="/transactions/stocks" class="btn-floating btn-large waves-effect waves-light blue" name="btn-editar"><i class="material-icons">toc</i></a>

            <a href="/" class="btn-floating btn-large waves-effect waves-light red" name="btn-alterar"><i class="material-icons">home</i></a>

            <ul id="error-message"></ul>
        </section>
    </main>
    <script src="/js/libs/jquery.js"></script>
    <script type="text/javascript" src="/js/libs/materialize.min.js"></script>
    <script src="/js/transactionForm.js"></script>
</body>

</html>
