<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/css/lista.css">
</head>

<body>
    <header>
        <div class="container">
            <h1 class="titulo">Transações</h1>
        </div>
    </header>
    <main>
        <section class="container tab-acao">
            <table id="tabela-acoes">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Ticker</th>
                        <th>Data</th>
                        <th>Preço (R$)</th>
                        <th>Quantidade</th>
                        <th>Custo</th>
                        <th>Valor Total</th>
                    </tr>
                </thead>
                <tbody id="tabela-acoes">

                    <% for(var i = 0; i < list.length; i++) { %>
                        <tr class="acao">
                            <td><%= list[i].type %></td>
                            <td><%= list[i].ticker %></td>
                            <td><%= list[i].date %></td>
                            <td><%= list[i].price %></td>
                            <td><%= list[i].quantity %></td>
                            <td><%= list[i].cost %></td>
                            <td><%= list[i].total_value %></td>
                        </tr>
                        <% } %>

                </tbody>
            </table>
        </section>
        <div class="add-transaction">
            <a href="/transacoes/acoes/form">Add transaction data</a>
        </div>
    </main>
</body>

</html>
